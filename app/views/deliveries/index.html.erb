<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">配送先登録/一覧</span></h3>
  </div>

  <div>
    <%= form_with model: @delivery do |f| %>
      <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし）, class: "col-3 col-form-label"%>
        <div class="col-3">
          <%= f.text_field :postal_code, class: "form-control form-control-sm" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :住所, class: "col-sm-3 col-form-label" %>
        <div class="col-6">
          <%= f.text_field :address, class: "form-control form-control-sm" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :宛名, class: "col-3 col-form-label" %>
        <div class="col-3">
          <%= f.text_field :name, class: "form-control form-control-sm" %>
        </div>
        <%= f.submit "新規登録", class: "col-1 btn btn-success btn-block btn-sm offset-3" %>
      </div>
    <% end %>
  </div>

  <div class="row mt-5">
    <div class="col-9">
      <table class="deliveries_table">
        <thead>
          <tr class="table-active">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%@deliveries.each do |delivery| %>
            <tr>
              <td><%= delivery.postal_code %></td>
              <td><%= delivery.address %></td>
              <td><%= delivery.name %></td>
              <td><%= link_to "編集する", edit_delivery_path(delivery.id), class: "btn btn-success btn-sm" %> <%= link_to "削除する", delivery_path(delivery.id), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

