  <div class="form-group row justify-content-center">
    <%= f.label :"商品画像", class: "col-md-2 control-label" %>
    <div class="col-6">
      <%= f.attachment_field :image, class: "form-control-static" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.label :"商品名", class: "col-md-2 control-label" %>
    <div class="col-6">
      <%= f.text_field :name, class: "form-control form-control-sm item_name" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.label :"商品説明", class: "col-md-2 control-label align-top" %>
    <div class="col-6">
      <%= f.text_area :explanation, class: "form-control form-control-sm"%>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.label :"ジャンル", class: "col-md-2 control-label" %>
    <div class="col-6">
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --", class: "form-control") %>
    </div>
  </div>
  <div class="item_price_form form-group row justify-content-center d-flex">
    <%= f.label :"税抜価格", class: "col-md-2 control-label" %>
    <div class="col-6">
      <%= f.text_field :price, class: "form-control form-control-sm" %>
    </div>
    <div>円</div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.label :"販売ステータス", class: "col-md-3 control-label" %>
    <div class="col-5">
      <%= f.radio_button :is_active, true %>販売中
      <%= f.radio_button :is_active, false, class: "ml-4" %>販売停止中
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit class: 'btn btn-success' %>
  </div>