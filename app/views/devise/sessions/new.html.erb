<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">ログイン</span></h3>
  </div>
  <div class="row mb-3">
    <div class="col-3 offset-2">
      <h6><span class="header">会員の方はこちらからログイン</span></h6>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
      <div class="form-group row">
        <%= f.label :メールアドレス, class:"col-2 offset-3 col-form-label" %>
        <div class="col-md-5">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード, class:"col-2 offset-3 col-form-label" %>
        <div class="col-md-5">
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2 mt-4 offset-5">
          <%= f.submit "ログイン", class:"btn btn-primary btn-block btn-sm" %>
        </div>
      </div>
    </form>
  <% end %>

  <div class="row mt-5">
    <div class="col-3 offset-2">
      <h6><span class="header">会員登録がお済みでない方</span></h6>
    </div>
  </div>

</div>